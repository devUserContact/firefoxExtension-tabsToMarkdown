{
  "manifest_version": 2,
  "name": "firefoxExtension-tabsToMarkdown",
  "version": "1.0",

  "description": "test",

  "browser_action": {
    "default_title": "Tabs to Markdown",
    "default_popup": "popup/index.html"
  },
  "permissions": ["tabs", "downloads", "downloads.open"],
  "commands": {
    "convert-tabs-to-markdown": {
      "suggested_key": {
        "default": "Ctrl+Alt+M"
      },
      "description": "Convert all open tabs to markdown"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ]
}
